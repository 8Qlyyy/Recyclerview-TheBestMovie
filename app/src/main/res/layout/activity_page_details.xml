<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    tools:context=".page_details_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="440dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                app:cardCornerRadius="8dp"
                >
            <ImageView
                android:id="@+id/img_page_details"
                android:layout_width="280dp"
                android:layout_height="420dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                tools:src="@tools:sample/avatars"/>

            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/tv_page_details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/films_name"
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingTop="16dp"/>


            <TextView
                android:id="@+id/tv_page_details_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/genre"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:paddingTop="8dp"/>


            <TextView
                android:id="@+id/tv_page_details_sinopsis"
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:lineSpacingExtra="4dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:text="@string/sinopsis"
                android:textSize="16sp" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
